# YoBotAssistant-Live Environment Configuration
# Production environment with real client data

ENVIRONMENT=live
NODE_ENV=production

# Production Database
DATABASE_URL=postgresql://live_user:secure_pass@localhost:5432/yobot_production

# Live API Endpoints
API_BASE_URL=https://yobot.tyson44.repl.co
SERVER_PORT=5000

# Production Airtable Configuration
AIRTABLE_BASE_ID=live_base_id_placeholder
AIRTABLE_TABLE_NAME=Production_Automation_Logs

# Production Slack Configuration  
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/live/webhook/url
SLACK_CHANNEL=#yobot-live

# Production Twilio Configuration
TWILIO_ACCOUNT_SID=live_account_sid
TWILIO_AUTH_TOKEN=live_auth_token
TWILIO_PHONE_NUMBER=+15559876543

# Production Email Configuration
SENDGRID_API_KEY=live_sendgrid_key
FROM_EMAIL=support@yobot.ai

# Production QuickBooks Configuration
QUICKBOOKS_CLIENT_ID=live_qb_client_id
QUICKBOOKS_CLIENT_SECRET=live_qb_client_secret

# Production Stripe Configuration
STRIPE_SECRET_KEY=sk_live_placeholder
STRIPE_PUBLISHABLE_KEY=pk_live_placeholder

# Security
JWT_SECRET=production_jwt_secret_key_32_chars
ENCRYPTION_KEY=production_encryption_key_32_chars

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/live-environment.log

# Features
ENABLE_TEST_MODE=false
ALLOW_MOCK_DATA=false
SAFETY_CHECKS=strict