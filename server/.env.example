# YoBot Command Center - Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=development
PORT=5000
SECRET_KEY=your-secret-key-here

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
TOKEN_EXPIRATION_MINUTES=60

# Airtable Configuration
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-airtable-base-id
AIRTABLE_SALES_TABLE=Sales Orders
AIRTABLE_TASKS_TABLE=Tasks
AIRTABLE_COPILOT_BASE_ID=your-copilot-base-id
AIRTABLE_COPILOT_TABLE_ID=your-copilot-table-id
AIRTABLE_CALLS_BASE_ID=your-calls-base-id
AIRTABLE_CALLS_TABLE_ID=your-calls-table-id

# Google Drive Configuration
GOOGLE_DRIVE_PARENT_ID=your-google-drive-parent-folder-id
GOOGLE_CREDENTIALS_PATH=path/to/credentials.json
# OR
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# DocuSign Configuration
DOCUSIGN_TEMPLATE_ID=your-docusign-template-id
DOCUSIGN_ENABLED=true

# Slack Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#yobot-alerts

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@yobot.bot
SYSTEM_EMAIL=noreply@yobot.bot

# Feature Flags
BEHAVIOR_TUNING_ENABLED=true